{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "declaration": false,
    "outDir": "./api-build",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "./lib/*": ["api/lib/*"],
      "../shared/*": ["shared/*"]
    },
    "types": ["node"]
  },
  "include": [
    "api/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client",
    "server"
  ]
}